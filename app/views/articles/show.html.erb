<div class="large-container center-block">
  <% if @article %>
    <h1><%= @article.title %></h1>
    <div>
      <p>Written by: <strong><%= @article.user.email %></strong></p>
    </div>
    <div>
      <%= @article.content %>
    </div>
  <% else %>
    <p> Article not found</p>
  <% end %>

  <% if @article.user == current_user %>
    <div>
      <%= link_to 'Delete article', @article, method: :delete, data: { confirm: 'Â¿are you sure? This action can not be undone'} %><br/>
    </div>
  <% end %>
</div>
